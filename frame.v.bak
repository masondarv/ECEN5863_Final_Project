module frame(
	input clk, reset,
	input [9:0] hcount, vcount,
	output r, g, b );

  always @(posedge clk)

  begin
      if(reset)  begin
      r <= 1'b0;
      g <= 1'b0;
      b <= 1'b0;
      end

      else begin

          //if the horizontal or vertical count is at the position of the frame, drive the vga output high
          if(hcount <9'd2 || hcount > 9'd478 || vcount <9'd2 || vcount > 9'd678 ) begin
              r <= 1'b1;
              g <= 1'b1;
              b <= 1'b1;
          end
          //otherwise drive the vga output low
          else begin
            r <= 1'b0;
            g <= 1'b0;
            b <= 1'b0;

          end

        end

  end



endmodule // frame
